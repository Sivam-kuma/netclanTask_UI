<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the whole SeekBar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Change this to your desired background color -->
            <corners android:radius="0dp" /> <!-- Change the corner radius as needed -->
        </shape>
    </item>

    <!-- Color for the SeekBar progress (the part that changes color as slider moves) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#0A2E41" /> <!-- Change this to your desired progress color -->
                <corners android:radius="0dp" /> <!-- Match the corner radius with the background item -->
            </shape>
        </clip>
    </item>
</layer-list>


