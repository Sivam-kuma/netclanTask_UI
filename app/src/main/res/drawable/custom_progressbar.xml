<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color for the whole progress bar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Change this to your desired background color -->
            <corners android:radius="8dp" /> <!-- Change the corner radius as needed -->
        </shape>
    </item>

    <!-- Color for the progress bar tail (the part that changes color as slider moves) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#00FF00" /> <!-- Change this to your desired progress color -->
                <corners android:radius="8dp" /> <!-- Match the corner radius with the background item -->
            </shape>
        </clip>
    </item>

    <!-- Add the thumb (slider) to the progress bar -->
    <item android:id="@android:id/secondaryProgress">
        <shape android:shape="oval">
            <solid android:color="#FF0000" /> <!-- Change this to your desired thumb (slider) color -->
            <size android:width="16dp" android:height="16dp" /> <!-- Change the size of the thumb as needed -->
        </shape>
    </item>

</layer-list>

